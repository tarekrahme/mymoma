<div class="blue-background bottom-radius">
  <h6 style="margin-left: 20px; margin-bottom: 0px; opacity: 0.3;"><% d = Date.today %>
    <%= d.strftime("%A, %b %d")%>
  </h6>
  <h3 style="margin-left: 20px; opacity: 0.8;">Savings for <%= current_user.wallet.goal.name.capitalize %></h3>
  <%= link_to edit_goal_path(@goal) do %>
    <div class="background-image text-decoration-none" style="height: 250; background-image: url(<%= @goal.picture.file ? (cl_image_path @goal.picture, crop: :fill) : 'https://images.unsplash.com/photo-1506666823169-bafe353bae96?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80' %>); height: 170px; width: 345px; margin: 0 auto; background-size: cover; background-repeat: no-repeat; background-position: center;">
    </div>
  <% end %>


  <div class="days-left-box"> <%= (@goal.completion_date.next_month - Date.today).to_i %> days left ğŸ
  </div>

  <br>

</div>
<div class="bar m-4">
  <div class="progress-text mb-3">
    <span style="opacity: 0.7">Your Progress</span>
    <span class="red-box small-box"> Â£<%= @goal.amount.to_i %></span>
  </div>
  <div class="progress" style="height: 22px">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" role="progressbar" style="width: <%= (@progress/ @goal.amount_cents).round(1)*100 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
      <div style="font-size: 16px">
      <%= (@progress/ @goal.amount_cents).round(1) *100%>%
      </div>
    </div>
  </div>
</div>

<div class="red-box save-box">
  <h6>Money left to save</h6>
  <h4 class="font-weight-bold">Â£<span style="font-size: 40px;">
    <%= (@goal.amount_cents.to_i - @progress.to_i)/100 %>
  </span></h4>
</div>

<button class="btn btn-primary btn-main mt-4" style="font-size:20px;"> Book it!</button>
